<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/collection_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter collection name"/>

    <EditText
        android:id="@+id/document_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter document name"/>

    <Button
        android:id="@+id/create_document_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Document"/>

</LinearLayout>
